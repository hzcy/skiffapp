                            android:layout_marginStart="@dimen/dp_10"
                            android:text="@string/skiff_163_com"
                            android:textColor="@color/colorDataDate"
                            android:textSize="16sp" />

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>


