<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchgocd"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <!-- 仅标题垂直列表-->




        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView

            android:id="@+id/tv_title"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorDataTitle"
            android:text="@string/datatitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





            <TextView
                android:id="@+id/tv_date"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorDataDate"
                android:text="@string/datadate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </LinearLayout>


    <LinearLayout
        android:layout_weight="2"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_down"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_vertical_align_bottom_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>






</androidx.cardview.widget.CardView>


